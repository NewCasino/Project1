<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <configSections>
        <section name="weights" type="System.Configuration.NameValueFileSectionHandler" />
    </configSections>
    <startup>
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <weights>
        <add key="1" value="10000" />
        <add key="1000" value="10000" />
    </weights>
    <appSettings>
        <add key="Service.Name" value="Cms.SanityCheck.Service" />
        <add key="Service.DisplayName" value="Cms.SanityCheck.Service" />
        <add key="Service.Description" value="Cms.SanityCheck.Service" />

        <!-- Email Configuration -->
        <add key="EmailSmtpServer" value="109.205.92.7" />
        <add key="EmailSmtpPort" value="25" />
        <add key="EmailSmtpRequireAuthentication" value="False" />
        <add key="EmailSmtpUsername" value="" />
        <add key="EmailSmtpPassword" value="" />
        <add key="FromEmail" value="ks@everymatrix.com" />
        <add key="LogEmail" value="ks@everymatrix.com" />
        <add key="SiteAlertReceiver" value="" />
        <add key="ServerAlertReceiver" value="" />
        <!-- Email Configuration -->

        <!-- The interval to check the status, unit: minute -->
        <add key="Interval" value="10" />
        
        <!-- The retry times -->
        <add key="RetryTimes" value="2" />

        <!-- HTTP Client Threads -->
        <add key="Threads" value="5" />
        
        <!-- The timeout of the web request, unit: second -->
        <add key="Timeout" value="10" />

        <!-- The critical elspsed seconds for a HTTP Request, if the time over the setting, the page will be marked as slow -->
        <add key="CriticalElapsedSeconds" value="3" />
        
        <!-- The critical weight to be removed from load balance -->
        <add key="CriticalWeight" value="3" />        
    </appSettings>
    <system.web>
        <membership defaultProvider="ClientAuthenticationMembershipProvider">
            <providers>
                <add name="ClientAuthenticationMembershipProvider" type="System.Web.ClientServices.Providers.ClientFormsAuthenticationMembershipProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" />
            </providers>
        </membership>
        <roleManager defaultProvider="ClientRoleProvider" enabled="true">
            <providers>
                <add name="ClientRoleProvider" type="System.Web.ClientServices.Providers.ClientRoleProvider, System.Web.Extensions, Version=4.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35" serviceUri="" cacheTimeout="86400" />
            </providers>
        </roleManager>
    </system.web>
</configuration>