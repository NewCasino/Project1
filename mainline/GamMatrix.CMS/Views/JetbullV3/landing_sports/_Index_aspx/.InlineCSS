#footer{display:none;}
html{background:url(//cdn.everymatrix.com/JetbullV2/_files/landing/landing_bg.png) no-repeat center top #2C2B2B;}

.landing_banner{display:block;width:100%;height:360px;margin:-10px;background:url(//cdn.everymatrix.com/JetbullV2/_files/landing/landing_sports.png) no-repeat right top transparent;}
.landing_banner_content{display:block; text-align:left; width:45%; padding:10px 0 0 5%;}
.landing_banner_content h3 {display: block;font-size: 36px;font-weight: 700;line-height: 40px;margin-bottom: 20px;text-transform:uppercase; text-shadow: 0 0.1111em 0.1111em #000;}
.landing_banner_content p{font-size:20px;line-height:28px;text-shadow:1px 1px 1px rgba(0,0,0,0.9); }
.landing_banner_content .landing_button{display:block; margin-top:20px; background:url(//cdn.everymatrix.com/JetbullV2/_files/landing/landing_button.png) no-repeat left top transparent; }
.landing_banner_content .landing_button {background: url("//cdn.everymatrix.com/JetbullV2/_files/landing/landing_button.png") no-repeat scroll left top transparent;display: block;font-size: 16px;font-weight: bold;text-transform:uppercase; text-shadow:1px 1px 1px rgba(0,0,0,0.9); height: 30px;line-height: 28px;margin: 10px 0 0 -10px;padding: 17px 10px 18px 20px; width: 125px;}
.landing_button .button_arrow {display: block; float: left; text-align: center; width: 30px; line-height:30px; margin-right: 5px; font-weight:normal; transform: scale(1,1.4);-o-transform:scale(1,1.4); -webkit-transform: scale(1,1.4); -mozila-transform:scale(1,1.4); -ms-transform:scale(1,1.4);}

.landing_steps{display:block; margin-top:-10px;}
.landing_step{dispaly:block;float:left; width:33.3333%;}
.landing_step_content{display:block; margin:0 auto; padding:20px; width:145px; height:185px; text-align:center; background:url(//cdn.everymatrix.com/JetbullV2/_files/landing/landing_step_bg.png) no-repeat center 0 transparent;}
.landing_step_title{display:block;margin:0px auto; font-size:42px; font-weight:bold; line-height:64px; text-shadow:1px 1px 5px rgba(0,0,0,0.9);}
.landing_step_info{display:block;font-size:24px;line-height:24px; text-shadow:1px 1px 5px rgba(0,0,0,0.9);}

.aboutus_box{display:block; margin-top:10px; padding:20px; text-align:left; border:1px solid #000;border-radius:0 16px; box-shadow:5px 5px 5px rgba(0,0,0,0.5), 0 0 3px rgba(255,255,255,0.2) inset; background: #dddddd; background: -moz-linear-gradient(top,  #dddddd 0%, #666666 75%); background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#dddddd), color-stop(75%,#666666)); background: -webkit-linear-gradient(top,  #dddddd 0%,#666666 75%); background: -o-linear-gradient(top,  #dddddd 0%,#666666 75%); background: -ms-linear-gradient(top,  #dddddd 0%,#666666 75%); background: linear-gradient(to bottom,  #dddddd 0%,#666666 75%); filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#dddddd', endColorstr='#666666',GradientType=0 ); }
.aboutus_icon{display:block; float:left; margin-right: 20px; }
.aboutus_content{display:block;margin-left:100px;}
.aboutus_box h3{display:block; color:#403f3f; font-size:28px; font-weight:bold; margin:10px 0;}
.aboutus_box p{display:block;color:#403f3f;font-size:14px; font-weight:bold;}